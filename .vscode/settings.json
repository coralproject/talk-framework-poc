// Place your settings in this file to overwrite default and user settings.
{
  "editor.tabSize": 2,
  "editor.rulers": [80],
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.wordWrapColumn": 80,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "node_modules": true,
    "dist": true,
    "coverage": true,
    "coverage.lcov": true,
    "tsconfig.json": true,
    "tslint.json": true,
    "typings.json": true,
    "typings": true,
    ".gitignore": false,
    "**/dist": true
  },
  "tslint.autoFixOnSave": false
}
